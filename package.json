{
  "name": "posthtml-load-plugins",
  "version": "0.11.2",
  "description": "Autoload Plugins for PostHTML",
  "engines": {
    "node": ">=6"
  },
  "main": "lib/index.js",
  "files": "lib/",
  "scripts": {
    "test": "xo src/**/*.js test/**/*.js && nyc ava",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel src/ -d lib/",
    "prepublish": "npm run build",
    "update": "updtr && ava-codemods --force"
  },
  "dependencies": {
    "app-root-path": "^1.0.0",
    "chalk": "^1.1.3",
    "log-symbols": "^1.0.2",
    "path-exists": "^3.0.0",
    "posthtml-standard-sequence": "0.0.5",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "ava-codemods": "^0.2.1",
    "babel-cli": "^6.6.5",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-preset-es2015-node6": "^0.2.0",
    "babel-register": "^6.7.2",
    "coveralls": "^2.11.9",
    "del": "^2.2.0",
    "nyc": "^6.4.4",
    "posthtml": "^0.8.7",
    "posthtml-bem": "^0.2.2",
    "posthtml-css-modules": "^0.1.0",
    "posthtml-each": "^1.0.1",
    "posthtml-include": "^1.1.0",
    "posthtml-modules": "^0.1.1",
    "posthtml-standard-config": "0.0.3",
    "posthtml-style-to-file": "^0.1.1",
    "read-pkg": "^1.1.0",
    "temp-write": "^2.1.0",
    "updtr": "^0.1.15",
    "xo": "^0.15.1"
  },
  "babel": {
    "presets": [
      "es2015-node6"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "posthtml": {
    "bem": {
      "elemPrefix": "__",
      "modPrefix": "--",
      "modDlmtr": "-"
    },
    "styleToFile": {
      "path": "./dist/css/"
    }
  },
  "author": {
    "name": "Michael Ciniawky",
    "email": "michael.ciniawsky@gmail.com"
  },
  "contributors": [
    {
      "name": "GitScrum",
      "email": "Scrum@list.ru",
      "url": "https://twitter.com/Scrum_"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posthtml/posthtml-load-plugins.git"
  },
  "bugs": {
    "url": "https://github.com/posthtml/posthtml-load-plugins/issues"
  },
  "homepage": "https://github.com/posthtml/posthtml-load-plugins#readme",
  "license": "MIT"
}
